<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--gridview and imageView controls must be instantiated in the on create in Main java-->
    <!--first gridview control in a project is named gridView1 by default-->

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:numColumns="3"
        android:columnWidth="155dp"
        android:horizontalSpacing="6dp"
        android:verticalSpacing="6dp" />

    <ImageView
        android:id="@+id/newImage"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/newImage" />


</LinearLayout>
